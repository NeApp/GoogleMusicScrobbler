{
  "title": "Neon",
  "description": "Scrobble your Google Play Music listening activity to Last.fm, Libre.fm and ListenBrainz",

  "applications": {
    "gecko": {
      "id": "jid1-rbAJu4BHjMqTww@jetpack",
      "strict_min_version": "57.0a1"
    }
  },
  "permissions": [
    "*://play.google.com/music/*",
    "*://ws.audioscrobbler.com/2.0/*",
    "storage",
    "unlimitedStorage"
  ],

  "background": {
    "scripts": [
      "common.js",
      "background/common.js",

      "background/messaging/messaging.js",
      "background/messaging/services/library.js",
      "background/messaging/services/storage.js",
      "background/messaging/services/scrobble.js",

      "background/main/main.js",
      "background/migrate/migrate.js"
    ]
  },
  "options_ui": {
    "page": "configuration/configuration.html",
    "browser_style": false,
    "open_in_tab": true
  },

  "modules": {
    "browsers": [
      "neon-extension-browser-webextension",
      "neon-extension-browser-firefox"
    ],
    "destinations": [
      "neon-extension-destination-lastfm",
      "neon-extension-destination-librefm",
      "neon-extension-destination-listenbrainz"
    ],
    "sources": [
      "neon-extension-source-googlemusic"
    ]
  }
}
